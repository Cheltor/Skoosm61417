<% if user_signed_in? %>
<div class="wrapper">
  <div class="sidebar" data-background-color="white" data-active-color="danger">

    <!--
    Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
    Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
  -->

      <div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.skoosm.com" class="simple-text">
                    Skoosm
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href="http://www.skoosm.com">
                        <i class="ti-layout"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="http://www.skoosm.com/courses">
                        <i class="ti-agenda"></i>
                        <p>Courses</p>
                    </a>
                </li>
                <li>
                    <a href="http://www.skoosm.com/posts">
                        <i class="ti-comments"></i>
                        <p>Posts</p>
                    </a>
                </li>
            </ul>
      </div>
    </div>

    <div class="main-panel">
    <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="#">Dashboard</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><%= link_to 'Edit Password', edit_user_registration_path %></li>
                        <li><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
                    </ul>

                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                  <div class="row">
                    <% @enrolls.each do |enroll| %>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 class="title"><%= enroll.course.try(:name) %></h4>
                                <p class="category"><div class="btn-group"><%= link_to 'Course Page', course_path(enroll.course), :class => 'btn btn-primary' %><%= link_to 'Unenroll', enroll, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></div></p>
                            </div>
                            <div class="content">
                                <%= enroll.course.posts.count %> posts
                                <%= enroll.course.enrolls.count %> enrolls
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-right">
                    <ul>
                        <li>
                          <a href="#">Copyright Â© 2016 Skoosm</a>  
                        </li>
                    </ul>
                </nav>
        <!-- <div class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Creative Tim</a>
                </div> -->
            </div>
        </footer>

    </div>
</div>
<% else %>
<div class="site-wrapper" style="background-color: #f4f3ef">
    <div class="site-wrapper-inner">
        <div class="cover-container">
            <div class="masthead clearfix">
                <div class="inner">
                     <h3 class="masthead-brand">Skoosm Loo</h3>
                </div>
            </div>
            <div class="inner cover">
                 <h1 class="cover-heading"><strong>Welcome to Skoosm,</strong></h1>
                 <h1 class="cover-heading"><strong>your college companion!</strong></h1>
            </div>
            <br>
            <div class="inner cover">
                <%= link_to 'Sign Up', new_user_registration_path, :class => 'btn btn-lg' %>
                <%= link_to 'Sign In', new_user_session_path, :class => 'btn btn-lg'  %>
            </div>
        </div>
    </div>
</div>
<% end %>