<div class="container">
	<div class="table-responsive">
	  <div class="container-fluid">
	    <h4 style="text-align:center">Our Rewards</h4>
	    <% if @rewards.blank? %>
	      <h5 style="text-align:center">You have not created any rewards yet</h5>
	    <% else %>
	      <table class="table">
	        <thead>
	          <tr>
	            <th>Name</th>
	            <th>Cost</th>
	            <th>Description</th>
	            <th>Time created</th>
	            <th colspan="1"></th>
	          </tr>
	        </thead>

	        <tbody>
	          <% @rewards.each do |reward| %>
	            <tr>
	              <td><%= reward.name %></td>
	              <td><%= reward.cost %></td>
	              <td><%= reward.description %></td>
	              <td><%= time_ago_in_words(reward.created_at) + " ago" %></td>
	              <td><%= link_to 'Show', reward, :class => 'btn btn-primary btn-round' %></td>
	            </tr>
	          <% end %>
	        </tbody>
	      </table>
	    <% end %>
	  </div>
	</div>
	<div style="text-align:center">
	  <%= will_paginate @reward %>
	</div>
</div>